<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammad.elitepayrollapp.AddEmployeeActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/addEmp_Phone_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="Phone Number 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addEmp_Phone_Input"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addEmp_Phone_Input"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Phone Number 1"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/addEmp_Phone2_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addEmp_Address_Input"
        app:layout_constraintTop_toTopOf="@+id/addEmp_Phone_TextView" />

    <TextView
        android:id="@+id/addEmp_Phone2_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Phone Number 2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/addEmp_Phone_Input"
        app:layout_constraintTop_toBottomOf="@+id/addEmp_Phone_TextView" />

    <EditText
        android:id="@+id/addEmp_Phone2_Input"
        android:layout_width="177dp"
        android:layout_height="43dp"
        android:layout_marginBottom="67dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Phone Number 2"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/AddEmp_Add_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addEmp_Phone_Input" />

    <TextView
        android:id="@+id/addEmp_Address_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addEmp_Address_Input"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addEmp_Address_Input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        app:layout_constraintBottom_toBottomOf="@+id/addEmp_Phone_Input"
        app:layout_constraintEnd_toStartOf="@+id/addEmp_Phone_Input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addEmp_Address_TextView" />

    <TextView
        android:id="@+id/addEmp_PayperDay_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment/Day"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/addEmp_PayperDday_Input"
        app:layout_constraintStart_toStartOf="@+id/addEmp_PayperDday_Input" />

    <EditText
        android:id="@+id/addEmp_PayperDday_Input"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginBottom="87dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:hint="Payment/Day"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/addEmp_Address_Input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AddEmp_Salary_Input"
        app:layout_constraintTop_toTopOf="@+id/AddEmp_Name_Input" />

    <TextView
        android:id="@+id/addEmp_NID_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="National ID"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/addEmp_NID_Input"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addEmp_NID_Input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:hint="National ID"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/AddEmp_Name_Input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AddEmp_Name_Input"
        app:layout_constraintTop_toBottomOf="@+id/addEmp_NID_TextView" />

    <TextView
        android:id="@+id/AddEmp_name_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AddEmp_Name_Input"
        app:layout_constraintStart_toStartOf="@+id/AddEmp_Name_Input" />

    <EditText
        android:id="@+id/AddEmp_Name_Input"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Employee Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/AddEmp_Salary_TextView"
        app:layout_constraintEnd_toStartOf="@+id/addEmp_NID_Input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddEmp_AddEmp_TextView" />

    <TextView
        android:id="@+id/AddEmp_Salary_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:text="Salary"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/AddEmp_Salary_Input"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/AddEmp_Salary_Input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Salary"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/addEmp_PayperDday_Input"
        app:layout_constraintEnd_toStartOf="@+id/addEmp_PayperDday_Input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddEmp_Salary_TextView" />

    <Button
        android:id="@+id/AddEmp_Add_Button"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_marginBottom="16dp"
        android:background="#00BB00"
        android:text="ADD"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AddEmp_AddEmp_TextView"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="16dp"
        android:text="Add New Employee"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/addEmp_NID_TextView"
        app:layout_constraintEnd_toEndOf="@+id/addEmp_NID_TextView"
        app:layout_constraintStart_toStartOf="@+id/AddEmp_name_TextView"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
